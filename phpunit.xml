<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
        colors="true"
        processIsolation="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        bootstrap="tests/bootstrap.php">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="construct">
            <file>tests/ConstructTest.php</file>
        </testsuite>
        <testsuite name="class">
            <file>tests/ClassTest.php</file>
        </testsuite>
        <testsuite name="assign">
            <file>tests/AssignTest.php</file>
        </testsuite>
        <testsuite name="list">
            <file>tests/PrefListTest.php</file>
        </testsuite>
        <testsuite name="sql">
            <file>tests/SqlTest.php</file>
        </testsuite>
        <testsuite name="array">
            <file>tests/ArrayTest.php</file>
        </testsuite>
        <testsuite name="serialize">
            <file>tests/SerializeTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>

